export TERMINAL=alacritty

export GDK_SCALE=1
export GDK_DPI_SCALE=0.65
export QT_AUTO_SCREEN_SCALE_FACTOR=1

xmodmap ~/.Xmodmap
xrdb -merge ~/.Xresources

xset r rate 250 60

[ "$(xinput | grep 'Kensington Slimblade Trackball' | wc -l)" -eq "1" ] \
    && xinput set-prop 'Kensington Slimblade Trackball' 'libinput Natural Scrolling Enabled' 1

[ "$(xinput | grep 'SynPS/2 Synaptics TouchPad' | wc -l)" -eq "1" ] \
    && xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Natural Scrolling Enabled' 1

xrandr \
    | awk '/HDMI-2 connected/ { getline; print $1 }' \
    | xargs -I{} xrandr --output HDMI-2 --mode {} --left-of eDP-1
