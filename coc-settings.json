{
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "dockerfile": {
      "command": "docker-languageserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "zig": {
      "command": "zls",
      "filetypes": ["zig"]
    }
  }
}
