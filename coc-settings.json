{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "json",
    "php",
    "zig"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "disableWorkspaceFolders": true,
      "filetypes": [
        "go"
      ]
    },
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "zig": {
      "command": "zls",
      "filetypes": [
        "zig"
      ]
    }
  }
}
